<div class="container">
  <div class="row header">
    <div class="col s12 center">
      <br>
      <img src="/assets/img/burger_vacuum.gif" alt="Burger Vacuum" class="responsive-img">
      <h2>Eat-Da-Burger!</h2>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m6">
      <h3 class="header">The Burger Menu</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s12 m6">
      <h3 class="header">Devoured Burgers</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{id}}. {{name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col s12 center">
      <h4 class="header">Create a New Burger:</h4>
      <form class="create-form">
        <input type="text" name="name" id="burger" class="validate" placeholder="Burger Name">
        <button type="submit" class="btn waves-effect waves-light light-blue darken-2">Create Burger</button>
      </form>
    </div>
  </div>
</div>